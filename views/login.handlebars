{{#if main}}
{{#each main as |name|}}
<h1>{{name}}</h1>
{{/each}}
{{/if}}

<form class="login-form">
  <div>
    <label for="email-login">Email:</label>
    <input type="email" id="email-login" />
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit">Login</button>
  </div>
</form>

<form class="signup-form">
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" />
  </div>
  <div>
    <label for="firstname-signup">First name:</label>
    <input type="text" id="firstname-signup" />
  </div>
    <div>
    <label for="lastname-signup">Last name:</label>
    <input type="text" id="lastname-signup" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="email" id="email-signup" />
  </div>
  <div>
    <label for="phone-signup">Phone Number:</label>
    <input type="text" id="phone-signup" />
  </div>
  <div>
    <label for="dogname-signup">Dog's Name:</label>
    <input type="text" id="dogname-signup" />
  </div>
  <div>
    <label for="dogbreed-signup">Dog Breed:</label>
    <input type="text" id="dogbreed-signup" />
  </div>
  <div>
    <label for="dogweight-signup">Dog Weight (in lbs):</label>
    <input type="text" id="dogweight-signup" />
  </div>
  <div>
    <label for="dogsex-signup">Dog's Sex:</label>
    <input type="text" id="dogsex-signup" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button type="submit">Signup</button>
  </div>
</form>

<script src="/javascript/login.js"></script>